{
    "extends": [
        "next/core-web-vitals", // Next.js 기본 린트 설정
        "eslint:recommended", // 기본적인 린트 규칙
        "plugin:@typescript-eslint/recommended" // TypeScript 관련 린트 규칙
    ],
    "rules": {
        "@typescript-eslint/no-explicit-any": "off", // any 타입 허용
        "@typescript-eslint/explicit-module-boundary-types": "off", // 함수 반환 타입 명시 강제 비활성화
        "react/react-in-jsx-scope": "off", // React import 요구 비활성화
        "react/jsx-props-no-spreading": "off", // props spreading 허용
        "no-console": "warn", // console.log 사용 시 경고
        "no-debugger": "warn", // debugger 사용 시 경고
        "@typescript-eslint/no-unused-vars": [
            "error",
            {
                "args": "all",
                "argsIgnorePattern": "^_",
                "caughtErrors": "all",
                "caughtErrorsIgnorePattern": "^_",
                "destructuredArrayIgnorePattern": "^_",
                "varsIgnorePattern": "^_",
                "ignoreRestSiblings": true
            }
        ]
    }
}
